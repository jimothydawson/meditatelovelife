---
/**
 * What is Vedic Meditation section
 * Content source: src/content/vedic.json
 * CMS fields: heading, intro, paragraphs (array), pullQuote
 */
import vedic from '../content/vedic.json';
---

<section id="vedic" class="section section--surface vedic">
  <div class="container vedic__inner">

    <div class="vedic__header" data-reveal>
      <span class="section-label">The practice</span>
      <h2 class="section-heading">
        {vedic.heading}
      </h2>
      <p class="section-intro">
        {vedic.intro}
      </p>
    </div>

    <div class="vedic__grid">
      <div class="vedic__body" data-reveal class="delay-100">
        {vedic.paragraphs.map(para => (
          <p>{para}</p>
        ))}
      </div>

      <div class="vedic__aside" data-reveal class="delay-200">
        <!-- Pull quote -->
        <blockquote class="vedic__quote">
          <p>{vedic.pullQuote}</p>
        </blockquote>

        <div class="vedic__cta-row">
          <a href="#services" class="btn btn--outline">See Sessions</a>
          <a href="#booking" class="btn btn--primary">Book Now</a>
        </div>
      </div>
    </div>

  </div>
</section>

<style>
  .vedic {
    background-color: var(--color-bg);
  }

  .vedic__inner {
    max-width: var(--max-width);
  }

  .vedic__header {
    margin-bottom: 4rem;
    text-align: center;
  }

  .vedic__header .section-intro {
    margin-inline: auto;
  }

  .vedic__grid {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  .vedic__body {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    color: var(--color-muted);
  }

  .vedic__body p {
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
  }

  /* Aside / Quote */
  .vedic__aside {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .vedic__quote {
    border-left: 2px solid var(--color-sage);
    padding: 2rem;
    background-color: var(--color-surface);
    border-radius: 0 var(--radius-lg) var(--radius-lg) 0;
    box-shadow: var(--shadow-md);
  }

  .vedic__quote p {
    font-size: var(--text-lg);
    font-style: italic;
    color: var(--color-text);
    line-height: var(--leading-snug);
    max-width: none;
    font-weight: var(--font-weight-light);
  }

  .vedic__cta-row {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 1rem;
  }

  /* Desktop layout */
  @media (min-width: 1024px) {
    .vedic__grid {
      flex-direction: row;
      align-items: flex-start;
      gap: 10%;
    }

    .vedic__body {
      flex: 1;
      max-width: 45rem;
    }

    .vedic__aside {
      width: 35%;
      min-width: 20rem;
      position: sticky;
      top: 8rem;
    }
  }
</style>
