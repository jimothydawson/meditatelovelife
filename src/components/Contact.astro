---
/**
 * Contact section & site footer
 * Content source: src/content/contact.json + src/content/site.json
 * CMS fields (contact.json): heading, intro, email, emailLabel, location, locationNote, abn
 * CMS fields (site.json): footerNote, abn, name
 */
import contact from '../content/contact.json';
import site from '../content/site.json';

const currentYear = new Date().getFullYear();
---

<section id="contact" class="section contact">
  <div class="container contact__inner">

    <div class="contact__header" data-reveal>
      <span class="section-label">Say hello</span>
      <h2 class="section-heading">
        {contact.heading}
      </h2>
      <p class="section-intro">
        {contact.intro}
      </p>
    </div>

    <div class="contact__details" data-reveal class="delay-100">

      <div class="contact__item">
        <span class="contact__label">Email</span>
        <a
          href={`mailto:${contact.email}`}
          class="contact__value contact__value--link"
          aria-label={`Email Kari at ${contact.emailLabel}`}
        >
          {contact.emailLabel}
        </a>
      </div>

      <div class="contact__item">
        <span class="contact__label">Location</span>
        <span class="contact__value">
          {contact.location}
        </span>
        {contact.locationNote && (
          <span class="contact__note">
            {contact.locationNote}
          </span>
        )}
      </div>

    </div>

  </div>
</section>

<!-- Footer -->
<footer class="footer">
  <div class="container footer__inner">

    <div class="footer__brand-area">
      <p class="footer__brand">{site.name}</p>
      <p class="footer__tagline">Bespoke Vedic Meditation & Wellbeing</p>
    </div>

    <div class="footer__meta">
      {site.footerNote && !site.footerNote.startsWith('PLACEHOLDER') && (
        <p class="footer__note">{site.footerNote}</p>
      )}

      <div class="footer__legal">
        <p class="footer__abn">ABN {site.abn}</p>
        <p class="footer__copy">
          &copy; {currentYear} {site.name}.
        </p>
      </div>
    </div>

  </div>
</footer>

<style>
  /* Contact section */
  .contact {
    background-color: var(--color-bg);
    padding-bottom: 2rem;
  }

  .contact__inner {
    max-width: 45rem;
  }

  .contact__header {
    margin-bottom: 4rem;
  }

  .contact__details {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 640px) {
    .contact__details {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .contact__item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .contact__label {
    font-size: var(--text-xs);
    font-weight: var(--font-weight-semibold);
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-muted);
    opacity: 0.7;
  }

  .contact__value {
    font-size: var(--text-lg);
    color: var(--color-text);
    font-weight: var(--font-weight-normal);
    max-width: none;
    line-height: var(--leading-tight);
  }

  .contact__value--link {
    color: var(--color-accent);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: all var(--transition-base);
    align-self: flex-start;
  }

  .contact__value--link:hover {
    color: var(--color-accent-hover);
    border-bottom-color: var(--color-accent-hover);
  }

  .contact__note {
    font-size: var(--text-sm);
    color: var(--color-muted);
    margin-top: 0.25rem;
    max-width: none;
    line-height: var(--leading-normal);
  }

  /* Footer */
  .footer {
    background-color: var(--color-surface);
    border-top: 1px solid var(--color-border);
    padding-block: 4rem 3rem;
  }

  .footer__inner {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  @media (min-width: 768px) {
    .footer__inner {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
    }
  }

  .footer__brand-area {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer__brand {
    font-size: var(--text-sm);
    font-weight: var(--font-weight-semibold);
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-text);
    max-width: none;
  }

  .footer__tagline {
    font-size: var(--text-xs);
    color: var(--color-muted);
    letter-spacing: 0.05em;
  }

  .footer__meta {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    text-align: left;
  }

  @media (min-width: 768px) {
    .footer__meta {
      text-align: right;
      align-items: flex-end;
    }
  }

  .footer__legal {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    color: var(--color-muted);
    font-size: var(--text-xs);
  }

  .footer__note,
  .footer__abn,
  .footer__copy {
    font-size: var(--text-xs);
    color: var(--color-muted);
    max-width: 30rem;
    line-height: var(--leading-normal);
  }
</style>
