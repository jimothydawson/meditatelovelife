---
/**
 * Redesigned Contact & Footer Section
 */
import contact from "../content/contact.json";
import site from "../content/site.json";

const currentYear = new Date().getFullYear();
---

<footer id="contact" class="footer section-pad">
  <div class="container footer-grid">
    <div class="footer-col reveal">
      <p class="footer-logo">{site.name}</p>
      <p class="footer-tagline">Bespoke Vedic Meditation & Wellbeing</p>
    </div>

    <div class="footer-col reveal">
      <h4>Contact</h4>
      <div class="footer-item">
        <a href={`mailto:${contact.email}`} class="footer-link">Email Kari</a>
      </div>
      <div class="footer-item">
        <p>{contact.location}</p>
      </div>
      {
        contact.locationNote && (
          <div class="footer-item">
            <p class="footer-note">{contact.locationNote}</p>
          </div>
        )
      }
    </div>

    <div class="footer-col reveal">
      <h4>Legal</h4>
      <div class="footer-item">
        <p>ABN {site.abn}</p>
      </div>
      <div class="footer-item">
        <p>&copy; {currentYear} {site.name}</p>
      </div>
      {
        site.footerNote && !site.footerNote.startsWith("PLACEHOLDER") && (
          <div class="footer-item">
            <p class="footer-note">{site.footerNote}</p>
          </div>
        )
      }
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-indigo);
    color: var(--color-warm-white);
    border-top: 1px solid rgba(244, 242, 238, 0.05);
  }
  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr;
    gap: 64px;
  }
  .footer-logo {
    font-family: var(--font-serif);
    font-size: 22px;
    margin-bottom: 12px;
    color: var(--color-warm-white);
  }
  .footer-tagline {
    font-size: 14px;
    color: rgba(244, 242, 238, 0.5);
    letter-spacing: 0.5px;
  }
  .footer-col h4 {
    font-size: 12px;
    letter-spacing: 3px;
    text-transform: uppercase;
    color: var(--color-eucalyptus);
    margin-bottom: 32px;
    font-family: var(--font-sans);
  }
  .footer-item {
    margin-bottom: 16px;
  }
  .footer-item p,
  .footer-link {
    font-size: 15px;
    color: rgba(244, 242, 238, 0.7);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  .footer-link:hover {
    color: var(--color-golden-seed);
  }
  .footer-note {
    font-size: 12px;
    color: rgba(244, 242, 238, 0.4);
    line-height: 1.6;
  }

  @media (max-width: 900px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 48px;
    }
    .footer-col h4 {
      margin-bottom: 24px;
    }
  }
</style>
