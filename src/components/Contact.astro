---
/**
 * Contact section & site footer
 * Content source: src/content/contact.json + src/content/site.json
 * CMS fields (contact.json): heading, intro, email, emailLabel, location, locationNote, abn
 * CMS fields (site.json): footerNote, abn, name
 */
import contact from '../content/contact.json';
import site from '../content/site.json';

const currentYear = new Date().getFullYear();
---

<section id="contact" class="section contact">
  <div class="container contact__inner">

    <div class="contact__header">
      <span class="section-label">Say hello</span>
      <h2 class="section-heading">
        <!-- PLACEHOLDER: update heading in src/content/contact.json → "heading" -->
        {contact.heading}
      </h2>
      <p class="section-intro">
        <!-- PLACEHOLDER: update intro in src/content/contact.json → "intro" -->
        {contact.intro}
      </p>
    </div>

    <div class="contact__details">

      <div class="contact__item">
        <span class="contact__label">Email</span>
        <a
          href={`mailto:${contact.email}`}
          class="contact__value contact__value--link"
          aria-label={`Email Kari at ${contact.emailLabel}`}
        >
          <!-- PLACEHOLDER: update email in src/content/contact.json → "email" -->
          {contact.emailLabel}
        </a>
      </div>

      <div class="contact__item">
        <span class="contact__label">Location</span>
        <span class="contact__value">
          <!-- PLACEHOLDER: update location in src/content/contact.json → "location" -->
          {contact.location}
        </span>
        {contact.locationNote && (
          <span class="contact__note">
            <!-- PLACEHOLDER: update locationNote in src/content/contact.json → "locationNote" -->
            {contact.locationNote}
          </span>
        )}
      </div>

    </div>

  </div>
</section>

<!-- Footer -->
<footer class="footer">
  <div class="container footer__inner">

    <p class="footer__brand">{site.name}</p>

    <div class="footer__meta">
      <!-- PLACEHOLDER: update footerNote in src/content/site.json → "footerNote" -->
      {site.footerNote && !site.footerNote.startsWith('PLACEHOLDER') && (
        <p class="footer__note">{site.footerNote}</p>
      )}

      <p class="footer__abn">
        <!-- ABN displayed as required — update in src/content/site.json → "abn" -->
        ABN {site.abn}
      </p>

      <p class="footer__copy">
        &copy; {currentYear} {site.name}. All rights reserved.
      </p>
    </div>

  </div>
</footer>

<style>
  /* Contact section */
  .contact__inner {
    max-width: 52rem;
  }

  .contact__header {
    margin-bottom: 3rem;
  }

  .contact__details {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .contact__item {
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
  }

  .contact__label {
    font-size: var(--text-xs);
    font-weight: var(--font-weight-semibold);
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--color-muted);
  }

  .contact__value {
    font-size: clamp(var(--text-lg), 2.5vw, var(--text-xl));
    color: var(--color-text);
    font-weight: var(--font-weight-medium);
    max-width: none;
  }

  .contact__value--link {
    color: var(--color-accent);
    text-decoration: underline;
    text-underline-offset: 4px;
  }

  .contact__value--link:hover {
    color: var(--color-accent-hover);
  }

  .contact__note {
    font-size: var(--text-sm);
    color: var(--color-muted);
    margin-top: 0.25rem;
    max-width: none;
  }

  /* Footer */
  .footer {
    background-color: var(--color-surface);
    border-top: 1px solid var(--color-border);
    padding-block: 2.5rem;
  }

  .footer__inner {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    align-items: flex-start;
  }

  @media (min-width: 640px) {
    .footer__inner {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }
  }

  .footer__brand {
    font-size: var(--text-sm);
    font-weight: var(--font-weight-semibold);
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: var(--color-text);
    max-width: none;
  }

  .footer__meta {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
    text-align: left;
  }

  @media (min-width: 640px) {
    .footer__meta {
      text-align: right;
    }
  }

  .footer__note,
  .footer__abn,
  .footer__copy {
    font-size: var(--text-xs);
    color: var(--color-muted);
    max-width: none;
  }
</style>
