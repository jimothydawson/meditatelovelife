---
import site from '../content/site.json';

const navLinks = [
  { label: 'About',    href: '#about' },
  { label: 'Meditate', href: '#vedic' },
  { label: 'Sessions', href: '#services' },
  { label: 'Book',     href: '#booking' },
  { label: 'Contact',  href: '#contact' },
];
---

<header class="nav">
  <div class="container nav__inner">
    <a href="/" class="nav__logo" aria-label={site.name}>
      {site.name}
    </a>

    <button
      class="nav__burger"
      aria-label="Open navigation menu"
      aria-expanded="false"
      aria-controls="nav-menu"
      id="nav-burger"
    >
      <span class="nav__burger-line"></span>
      <span class="nav__burger-line"></span>
      <span class="nav__burger-line"></span>
    </button>

    <nav id="nav-menu" class="nav__menu" aria-label="Main navigation">
      <ul class="nav__list" role="list">
        {navLinks.map(link => (
          <li>
            <a href={link.href} class="nav__link">{link.label}</a>
          </li>
        ))}
      </ul>
      <a href="#booking" class="btn btn--primary nav__cta">Book Now</a>
    </nav>
  </div>
</header>

<!-- Minimal island: only JS is the mobile menu toggle -->
<script>
  const burger = document.getElementById('nav-burger') as HTMLButtonElement;
  const menu = document.getElementById('nav-menu') as HTMLElement;

  burger?.addEventListener('click', () => {
    const isOpen = menu.classList.toggle('nav__menu--open');
    burger.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
    burger.setAttribute('aria-label', isOpen ? 'Close navigation menu' : 'Open navigation menu');
  });

  // Close menu when a link is clicked
  menu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      menu.classList.remove('nav__menu--open');
      burger.setAttribute('aria-expanded', 'false');
      burger.setAttribute('aria-label', 'Open navigation menu');
    });
  });
</script>

<style>
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    transition: all var(--transition-base);
    background-color: var(--glass-bg);
    backdrop-filter: blur(var(--glass-blur));
    -webkit-backdrop-filter: blur(var(--glass-blur));
    border-bottom: 1px solid var(--glass-border);
  }

  .nav__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    height: 4.5rem; /* slightly taller */
    transition: height var(--transition-base);
  }

  .nav__logo {
    font-size: var(--text-sm);
    font-weight: var(--font-weight-semibold);
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-text);
    text-decoration: none;
    white-space: nowrap;
    transition: color var(--transition-base);
  }

  .nav__logo:hover {
    color: var(--color-accent);
  }

  .nav__burger {
    display: flex;
    flex-direction: column;
    gap: 6px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    position: relative;
    z-index: 101;
  }

  .nav__burger-line {
    display: block;
    width: 24px;
    height: 1.5px;
    background-color: var(--color-text);
    border-radius: 2px;
    transition: all var(--transition-base);
  }

  /* Burger Open State */
  .nav__menu--open + .nav__burger .nav__burger-line:nth-child(1) {
    transform: translateY(7.5px) rotate(45deg);
  }
  .nav__menu--open + .nav__burger .nav__burger-line:nth-child(2) {
    opacity: 0;
  }
  .nav__menu--open + .nav__burger .nav__burger-line:nth-child(3) {
    transform: translateY(-7.5px) rotate(-45deg);
  }

  .nav__menu {
    display: flex;
    flex-direction: column;
    position: fixed;
    inset: 0;
    background-color: var(--color-bg);
    padding: 7rem var(--space-md) 2rem;
    opacity: 0;
    visibility: hidden;
    transform: translateX(100%);
    transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .nav__menu--open {
    opacity: 1;
    visibility: visible;
    transform: translateX(0);
  }

  .nav__list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 2.5rem;
  }

  .nav__link {
    display: block;
    padding: 1rem 0;
    font-size: var(--text-2xl);
    font-weight: var(--font-weight-light);
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--color-text);
    text-decoration: none;
    border-bottom: 1px solid var(--color-border);
    transition: color var(--transition-base), transform var(--transition-base);
  }

  .nav__link:hover {
    color: var(--color-accent);
    transform: translateX(10px);
  }

  .nav__cta {
    width: 100%;
    margin-top: auto;
  }

  /* Desktop layout */
  @media (min-width: 900px) {
    .nav__inner {
      height: 5rem;
    }

    .nav__burger {
      display: none;
    }

    .nav__menu {
      display: flex;
      flex-direction: row;
      align-items: center;
      gap: 2.5rem;
      position: static;
      background: none;
      border: none;
      padding: 0;
      opacity: 1;
      visibility: visible;
      transform: none;
      width: auto;
    }

    .nav__list {
      flex-direction: row;
      gap: 1.5rem;
      margin-bottom: 0;
    }

    .nav__link {
      padding: 0.5rem 0;
      font-size: var(--text-xs);
      font-weight: var(--font-weight-semibold);
      letter-spacing: 0.1em;
      border-bottom: 2px solid transparent;
    }

    .nav__link:hover {
      color: var(--color-accent);
      transform: none;
      border-bottom-color: var(--color-accent);
    }

    .nav__cta {
      width: auto;
      margin-top: 0;
      padding: 0.75rem 1.5rem;
    }
  }
</style>
