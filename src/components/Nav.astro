---
import site from "../content/site.json";
---

<nav id="nav" class="nav">
  <a href="#" class="nav-logo">{site.name}</a>
  <a href="#book" class="btn btn--nav nav-cta">Book a Session</a>
</nav>

<script>
  // Nav scroll effect
  const nav = document.getElementById("nav");
  window.addEventListener("scroll", () => {
    nav?.classList.toggle("scrolled", window.scrollY > 60);
  });
</script>

<style>
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: 24px 48px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.5s ease;
  }

  :global(.nav.scrolled) {
    background: rgba(31, 47, 58, 0.92);
    backdrop-filter: blur(20px);
    padding: 16px 48px;
  }

  .nav-logo {
    font-family: var(--font-serif);
    font-size: 18px;
    color: var(--color-warm-white);
    letter-spacing: 0.5px;
    text-decoration: none;
  }

  .nav-cta {
    /* Inherits from .btn and .btn--nav in global.css */
  }

  @media (max-width: 900px) {
    .nav {
      padding: 16px 24px;
    }
    :global(.nav.scrolled) {
      padding: 12px 24px;
    }
  }

  @media (max-width: 600px) {
    .nav {
      padding: 14px 20px;
    }
    .nav-cta {
      display: none;
    }
  }
</style>
