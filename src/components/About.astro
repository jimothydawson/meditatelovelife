---
/**
 * About Kari section
 * Content source: src/content/about.json
 * CMS fields: heading, paragraphs (array), imageSrc, imageAlt
 */
import about from '../content/about.json';
---

<section id="about" class="section about">
  <div class="container about__inner">

    <!-- Imagery -->
    <div class="about__imagery" data-reveal>
      <div class="about__img-wrapper">
        <img
          src="/images/meditation-vibe.png"
          alt="Abstract meditation atmosphere"
          class="about__img"
          width="800"
          height="1000"
          loading="lazy"
        />
        <div class="about__img-overlay"></div>
      </div>
    </div>

    <!-- Text -->
    <div class="about__text">
      <span class="section-label" data-reveal>Your teacher</span>
      <h2 class="section-heading" data-reveal class="delay-100">
        {about.heading}
      </h2>

      <div class="about__body" data-reveal class="delay-200">
        {about.paragraphs.map(para => (
          <p>{para}</p>
        ))}
      </div>

      <div data-reveal class="delay-300">
        <a href="#booking" class="btn btn--outline about__cta">
          Book a Session
        </a>
      </div>
    </div>

  </div>
</section>

<style>
  .about {
    background-color: var(--color-bg);
  }

  .about__inner {
    display: flex;
    flex-direction: column;
    gap: 4rem;
    align-items: center;
  }

  /* Imagery */
  .about__imagery {
    width: 100%;
    max-width: 35rem;
  }

  .about__img-wrapper {
    position: relative;
    border-radius: var(--radius-lg);
    overflow: hidden;
    aspect-ratio: 4 / 5;
    background-color: var(--color-surface);
    box-shadow: var(--shadow-lg);
  }

  .about__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 1.5s ease;
  }

  .about__imagery:hover .about__img {
    transform: scale(1.05);
  }

  .about__img-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, transparent 60%, rgba(45, 38, 34, 0.1));
    pointer-events: none;
  }

  /* Text */
  .about__text {
    max-width: 40rem;
    text-align: center;
  }

  .about__body {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 3rem;
    color: var(--color-muted);
  }

  .about__body p {
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
  }

  /* Desktop layout */
  @media (min-width: 1024px) {
    .about__inner {
      flex-direction: row-reverse;
      gap: 10%;
      align-items: center;
    }

    .about__imagery {
      width: 45%;
      max-width: none;
    }

    .about__text {
      width: 45%;
      text-align: left;
    }

    .about__body {
      margin-bottom: 4rem;
    }
  }
</style>
