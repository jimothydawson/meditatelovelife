---
/**
 * Sessions & Courses section
 * Content source: src/content/services.json
 * CMS fields: heading, intro, services (array of objects), note
 * Each service: id, name, description, price, duration, format
 */
import services from '../content/services.json';
---

<section id="services" class="section services">
  <div class="services__bg">
    <img src="/images/mandala-pattern.png" alt="" aria-hidden="true" />
  </div>

  <div class="container">

    <div class="services__header" data-reveal>
      <span class="section-label">Work with Kari</span>
      <h2 class="section-heading">
        {services.heading}
      </h2>
      <p class="section-intro">
        {services.intro}
      </p>
    </div>

    <ul class="services__grid" role="list">
      {services.services.map((service, index) => (
        <li class="services__card" data-reveal class={`delay-${(index + 1) * 100}`}>
          <div class="services__card-header">
            <h3 class="services__card-name">{service.name}</h3>
            <div class="services__meta">
              <span class="services__price">{service.price}</span>
              <span class="services__sep" aria-hidden="true">Â·</span>
              <span class="services__duration">{service.duration}</span>
            </div>
          </div>
          <p class="services__description">
            {service.description}
          </p>
          <p class="services__format">
            <span class="services__format-label">Format:</span> {service.format}
          </p>
        </li>
      ))}
    </ul>

    {services.note && (
      <p class="services__note" data-reveal>
        {services.note}
      </p>
    )}

    <div class="services__cta-row" data-reveal>
      <a href="#booking" class="btn btn--primary">Book a Session</a>
    </div>

  </div>
</section>

<style>
  .services {
    background-color: var(--color-sage-light);
    position: relative;
  }

  .services__bg {
    position: absolute;
    inset: 0;
    opacity: 0.04;
    pointer-events: none;
    z-index: 0;
  }

  .services__bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .services__header {
    margin-bottom: 5rem;
    position: relative;
    z-index: 1;
  }

  .services__grid {
    list-style: none;
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 4rem;
    position: relative;
    z-index: 1;
  }

  @media (min-width: 768px) {
    .services__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1100px) {
    .services__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .services__card {
    background-color: var(--color-white);
    border-radius: var(--radius-lg);
    padding: 3rem 2.5rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    transition: all var(--transition-base);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--color-border);
  }

  .services__card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-accent);
  }

  .services__card-header {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .services__card-name {
    font-size: var(--text-xl);
    font-weight: var(--font-weight-normal);
    color: var(--color-text);
    line-height: var(--leading-tight);
    letter-spacing: -0.01em;
  }

  .services__meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .services__price {
    font-size: var(--text-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-accent);
    letter-spacing: 0.05em;
  }

  .services__sep {
    color: var(--color-border);
    font-weight: 200;
  }

  .services__duration {
    font-size: var(--text-sm);
    color: var(--color-muted);
  }

  .services__description {
    font-size: var(--text-base);
    color: var(--color-muted);
    line-height: var(--leading-relaxed);
    flex: 1;
    max-width: none;
  }

  .services__format {
    font-size: var(--text-xs);
    color: var(--color-muted);
    max-width: none;
    margin-top: auto;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .services__format-label {
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
  }

  .services__note {
    font-size: var(--text-sm);
    color: var(--color-muted);
    margin-bottom: 3rem;
    padding: 1.5rem 2rem;
    background-color: rgba(255, 255, 255, 0.5);
    border-radius: var(--radius-md);
    border: 1px dashed var(--color-border);
    max-width: var(--max-width-prose);
    font-style: italic;
    position: relative;
    z-index: 1;
  }

  .services__cta-row {
    margin-top: 2rem;
    position: relative;
    z-index: 1;
  }
</style>
