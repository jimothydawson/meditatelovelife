---
/**
 * Sessions & Courses section
 * Content source: src/content/services.json
 * CMS fields: heading, intro, services (array of objects), note
 * Each service: id, name, description, price, duration, format
 */
import services from '../content/services.json';
---

<section id="services" class="section services">
  <div class="container">

    <div class="services__header">
      <span class="section-label">Work with Kari</span>
      <h2 class="section-heading">
        <!-- PLACEHOLDER: update heading in src/content/services.json → "heading" -->
        {services.heading}
      </h2>
      <p class="section-intro">
        <!-- PLACEHOLDER: update intro in src/content/services.json → "intro" -->
        {services.intro}
      </p>
    </div>

    <ul class="services__grid" role="list">
      {services.services.map(service => (
        <li class="services__card">
          <div class="services__card-header">
            <!-- PLACEHOLDER: update service name in src/content/services.json → services[n].name -->
            <h3 class="services__card-name">{service.name}</h3>
            <div class="services__meta">
              <!-- PLACEHOLDER: update price in src/content/services.json → services[n].price -->
              <span class="services__price">{service.price}</span>
              <span class="services__sep" aria-hidden="true">·</span>
              <!-- PLACEHOLDER: update duration in src/content/services.json → services[n].duration -->
              <span class="services__duration">{service.duration}</span>
            </div>
          </div>
          <p class="services__description">
            <!-- PLACEHOLDER: update description in src/content/services.json → services[n].description -->
            {service.description}
          </p>
          <p class="services__format">
            <!-- PLACEHOLDER: update format in src/content/services.json → services[n].format -->
            <span class="services__format-label">Format:</span> {service.format}
          </p>
        </li>
      ))}
    </ul>

    {services.note && (
      <p class="services__note">
        <!-- PLACEHOLDER: update note in src/content/services.json → "note" -->
        {services.note}
      </p>
    )}

    <div class="services__cta-row">
      <a href="#booking" class="btn btn--primary">Book a Session</a>
    </div>

  </div>
</section>

<style>
  .services__header {
    margin-bottom: 3rem;
  }

  .services__grid {
    list-style: none;
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  @media (min-width: 640px) {
    .services__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .services__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .services__card {
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    transition: border-color var(--transition-base), box-shadow var(--transition-base);
  }

  .services__card:hover {
    border-color: var(--color-accent);
    box-shadow: 0 4px 24px rgba(139, 110, 90, 0.08);
  }

  .services__card-header {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .services__card-name {
    font-size: var(--text-xl);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
    line-height: var(--leading-snug);
  }

  .services__meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .services__price {
    font-size: var(--text-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-accent);
  }

  .services__sep {
    color: var(--color-border);
    font-weight: 300;
  }

  .services__duration {
    font-size: var(--text-sm);
    color: var(--color-muted);
  }

  .services__description {
    font-size: var(--text-base);
    color: var(--color-text);
    line-height: var(--leading-relaxed);
    flex: 1;
    max-width: none;
  }

  .services__format {
    font-size: var(--text-sm);
    color: var(--color-muted);
    max-width: none;
    margin-top: auto;
    padding-top: 0.75rem;
    border-top: 1px solid var(--color-border);
  }

  .services__format-label {
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
  }

  .services__note {
    font-size: var(--text-sm);
    color: var(--color-muted);
    margin-bottom: 2rem;
    padding: 1rem 1.25rem;
    background-color: var(--color-surface);
    border-radius: var(--radius-md);
    border: 1px dashed var(--color-border);
    max-width: var(--max-width-prose);
  }

  .services__cta-row {
    margin-top: 0.5rem;
  }
</style>
